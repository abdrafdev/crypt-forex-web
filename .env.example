# CryptoForex Platform Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
APP_NAME=CryptoForex
APP_VERSION=1.0.0
DEBUG=true

# ============================================
# FRONTEND (Next.js)
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ============================================
# BACKEND (Python FastAPI)
# ============================================
# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://forexuser:forexpass@localhost:5432/cryptoforex

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=cryptoforex:

# Security
SECRET_KEY=your-secret-key-change-this-in-production-2024
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://cryptoforex.vercel.app

# ============================================
# BLOCKCHAIN
# ============================================
# Ethereum/Polygon RPC
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/demo
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/demo

# Deployment wallet (NEVER commit real private keys!)
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Smart Contract Addresses (will be populated after deployment)
STABLECOIN_FACTORY_ADDRESS=
FOREX_PAIR_FACTORY_ADDRESS=
TRADING_ENGINE_ADDRESS=
TREASURY_ADDRESS=

# ============================================
# EXTERNAL APIs
# ============================================
# Forex Data Providers
ALPHA_VANTAGE_API_KEY=demo
FOREX_COM_API_KEY=your-forex-com-api-key
FOREX_COM_API_SECRET=your-forex-com-api-secret

# Crypto Data
COINGECKO_API_KEY=your-coingecko-api-key
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_API_SECRET=your-coinbase-api-secret
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret

# ============================================
# KYC/AML PROVIDERS
# ============================================
KYC_PROVIDER=jumio  # Options: jumio, onfido, sumsub
JUMIO_API_KEY=your-jumio-api-key
JUMIO_API_SECRET=your-jumio-api-secret
JUMIO_API_URL=https://api.jumio.com

# ============================================
# PAYMENT PROVIDERS
# ============================================
# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox  # sandbox or live

# ============================================
# EMAIL CONFIGURATION
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
FROM_EMAIL=noreply@cryptoforex.com
SUPPORT_EMAIL=support@cryptoforex.com

# ============================================
# TRADING SETTINGS
# ============================================
MIN_DEPOSIT_USD=100.0
MAX_DEPOSIT_USD=1000000.0
TRADING_FEE_PERCENT=0.1
WITHDRAWAL_FEE_PERCENT=0.5
MAX_SLIPPAGE_PERCENT=5.0
MIN_LIQUIDITY_RATIO=0.1

# ============================================
# RATE LIMITS
# ============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ============================================
# MONITORING & LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/cryptoforex.log

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================
# ANALYTICS
# ============================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# ============================================
# SOCIAL OAUTH (Optional)
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================
# DEVELOPMENT
# ============================================
# Set to true to enable debug mode
DEBUG=true
# Set to true to enable test mode (uses test data)
TEST_MODE=false
# Set to true to skip KYC verification in development
SKIP_KYC_VERIFICATION=true
